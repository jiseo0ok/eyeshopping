<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@drawable/back_24"
            android:id="@+id/back"
            android:scaleType="fitCenter">
        </ImageButton>
        <EditText
            android:layout_width="0dp"
            android:hint="#가좌동 #미니멀"
            android:layout_height="50dp"
            android:layout_weight="7"
            android:id="@+id/searched"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:src="@drawable/ic_baseline_map_24"
            android:scaleType="fitCenter"
            android:layout_weight="2"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:src="@drawable/search"
            android:scaleType="fitCenter"
            android:layout_weight="2"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_margin="10dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            ></View>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="#미니멀"
        android:id="@+id/button_id1"
        android:background="@drawable/edge">
    </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="#미니멀"
            android:id="@+id/button_id2"
            android:background="@drawable/edge">
        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="#미니멀"
            android:id="@+id/button_id3"
            android:background="@drawable/edge">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/button_id4"
            android:text="#미니멀"
            android:background="@drawable/edge">
        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="#미니멀"
            android:id="@+id/button_id5"
            android:background="@drawable/edge"
            >
        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="#미니멀"
            android:id="@+id/button_id6"
            android:background="@drawable/edge"
            >
        </Button>
    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_margin="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#000000"></View>
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/edge"
           >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:orientation="vertical">
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_baseline_dehaze_48"
                android:scaleType="fitXY"

                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="중정"
                    android:textSize="20dp"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="미니얼한 옷을 팔음! "
                />
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="#미니멀 #가좌동"
                    />
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="경상남도 진주시 가좌동 14번길"/>

            </LinearLayout>


        </LinearLayout>
        </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#D7D7D8">
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_dehaze_48"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:id="@+id/menu_2"
            android:src="@drawable/ic_baseline_home_24"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@drawable/search"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_group_24"
            android:scaleType="fitCenter"
            />



    </LinearLayout>



</LinearLayout>